<p style="color: green"><%= notice %></p>

<h1>Tasks To-Do</h1>

<%= render "search_form" %>
<% if @tasks.present? %>
  
  <ul>
    <div id="tasks">
  <% @tasks.each do |task| %>
    <%= render task %>
    <p>
      <%= link_to "Show this task", task %>
    </p>
  <% end %>
</div>

    <%= link_to "New task", new_task_path %>
  </ul>
<% else %>
  <p>No Task found.</p>
<% end %>







